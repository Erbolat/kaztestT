<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="#f5f5f5"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="16dp">
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
        android:id="@+id/layAvatar"
    android:layout_height="wrap_content">

    <kz.drw.kaztest.utils.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="116dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="116dp"
        android:src="@drawable/prof"
        android:background="@drawable/prof"
        app:civ_border_width="1dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="8dp"
        app:civ_border_color="@color/colorWhite2"/>
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:elevation="3dp"
        android:layout_marginTop="16dp"
        android:background="#fff">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:paddingLeft="6dp"
            android:text="   Баланс:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrice"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="0 тг"/>
</LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="#1dab27"
            android:elevation="3dp"
            android:id="@+id/btnPriced"
            android:textColor="#fff"
            android:text="@string/fill"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:padding="8dp"
        android:background="#fff"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <com.gregacucnik.EditTextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/tvName"
            app:ettEmptyTexStyle="normal"
            android:textSize="16dp"
            app:ettTextColor="@color/colorPrimaryDark"
            app:ettEmptyColor="@color/colorPrimaryDark"
            app:ettShowHint="false"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#d1c9c9"
            android:layout_height="1dp"/>

        <com.gregacucnik.EditTextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:id="@+id/tvPhone"
            app:ettEmptyTexStyle="normal"
            android:textSize="16dp"
            app:ettTextColor="@color/colorPrimaryDark"
            app:ettEmptyColor="@color/colorPrimaryDark"
            app:ettShowHint="false"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#d1c9c9"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21.12.1992"
            android:paddingLeft="4dp"
            android:textSize="16sp"
                android:id="@+id/tvBirth"
            android:textColor="@color/colorPrimaryDark"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#d1c9c9"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/city"
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:id="@+id/tvCity"
            android:textColor="@color/colorPrimaryDark"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#d1c9c9"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/school"
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:id="@+id/tvSchool"
            android:textColor="@color/colorPrimaryDark"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#d1c9c9"
            android:layout_height="1dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:background="@color/colorWhite2"
        android:text="@string/male"
        android:textAllCaps="false"
        android:textColor="#000"
        android:id="@+id/btnMen"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:background="@color/colorWhite2"
        android:text="@string/female"
        android:textAllCaps="false"
        android:layout_marginLeft="14dp"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        android:id="@+id/btnWomen"/>
</LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorPrimary"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:id="@+id/btnSave"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorPrimary"
            android:text="@string/changePass"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:id="@+id/btnChangePass"/>

    </LinearLayout>
</LinearLayout>
    </ScrollView>