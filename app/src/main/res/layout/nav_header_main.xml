<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   android:gravity="bottom"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:id="@+id/layProf">
     <kz.drw.kaztest.utils.CircleImageView
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_gravity="center"
        android:id="@+id/prof"
        android:layout_marginTop="40dp"
         android:background="@drawable/prof"
        android:src="@drawable/prof"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
              android:visibility="invisible"
               />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter"
                android:textSize="15sp"
                android:id="@+id/tvName"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:typeface="normal"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/imgWrite"
                android:src="@drawable/draw"
                android:layout_weight="2"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical"

               />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/layBalance"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:paddingTop="2dp"
                android:src="@drawable/coins"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Баланс: 0 тг"
        android:paddingLeft="6dp"
        android:textSize="16sp"
        android:gravity="center"
        android:id="@+id/tvBalance"
        android:layout_gravity="center_horizontal"
        android:typeface="normal"
        android:textStyle="bold" />

        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="@string/fill_balance"
        android:textSize="16sp"
        android:gravity="center"
        android:id="@+id/tvAddBalance"
        android:layout_gravity="center_horizontal"
        android:typeface="normal"
        android:textStyle="bold" />
        </LinearLayout>
</LinearLayout>
